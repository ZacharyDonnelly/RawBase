{
  // STYLELINT
  // ----------------------------------------
  "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": false,
  "stylelint.snippet": ["css", "less", "postcss", "scss"],
  "stylelint.validate": ["css", "less", "postcss", "scss"],
  // ----------------------------------------
  // EDITOR
  // ----------------------------------------
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  // HTML
  // ----------------------------------------
  "html.format.enable": false,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "jsx-html": "html",
    "html": "html",
    "scss": "css",
  },
  "emmet.syntaxProfiles": {
    "jsx-html": "html",
    "html": "html",
  },
  "emmet.preferences": {
    "jsx-html": {
      "selfClosingStyle": "html",
      "singleQuote": true,
      "jsxSingleQuote": true,
      "semicolons": false,
      "jsxSemicolons": false,
      "endOfLine": "lf",
      "jsxEndOfLine": "lf",
    }
  },
  "emmet.showAbbreviationSuggestions": true,
  "emmet.showSuggestionsAsSnippets": true,
  // FILES
  // ----------------------------------------
  "files.associations": {
    "*.config.js": "javascript"
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  // ESLINT
  // ----------------------------------------
  // Linting:,
  "eslint.validate": ["typescript", "typescriptreact", "javascript"],
  "eslint.enable": true,
  "eslint.alwaysShowStatus": true,
  "eslint.packageManager": "yarn",
  "eslint.options": {
    "extensions": [".html", ".js", ".ts", ".tsx"]
  },
  "json.format.enable": true,
  "javascript.validate.enable": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // YARN
  // ----------------------------------------
  "search.exclude": {
    "**/coverage": true,
    "**/dist": true
  },
  "typescript.tsdk": "node_modules/typescript/lib/typescript.js",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "eslint.nodePath": "node_modules/.bin/eslint",
  "prettier.prettierPath": "node_modules/.bin/prettier"
}
