{
  "name": "rawbase",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "debug": "node --inspect --inspect-brk ./node_modules/webpack/bin/webpack.js",
    "dev": "yarn run webpack --env=development --hot",
    "dev:debug": "yarn run debug --env=development",
    "lint-staged": "cat .lintstagedrc.json | npx lint-staged --config -",
    "lint:all": "npm-run-all --parallel lint:*",
    "lint:eslint": "eslint --fix --ignore-path .gitignore --ext .ts,.tsx",
    "lint:prettier": "prettier --write --loglevel warn \"**/*.{js,ts,js,json,scss,tsx}\"",
    "lint:stylelint": "stylelint .stylelintrc.json --fix --ignore-path .gitignore",
    "prepare": "husky install",
    "prod": "yarn run webpack --env=production",
    "prod:analyze": "yarn run prod --env.presets analyze",
    "prod:compress": "yarn run prod --env=production compress",
    "prod:debug": "yarn run debug --env=production",
    "prod:ts": "yarn run prod --env.presets typescript",
    "start": "webpack-dev-server --env development --hot --open",
    "webpack": "webpack"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^14.1.1",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@stylelint/prettier-config": "^2.0.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "classnames": "^2.3.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin": "^1.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "postcss-html": "^1.4.1",
    "prettier": "^2.6.2",
    "sass": "^1.51.0",
    "stylelint": "^14.8.1",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-no-unsupported-browser-features": "^5.0.3",
    "stylelint-scss": "^4.2.0",
    "typescript": "^4.6.4"
  }
}
