{
  "name": "@rawbase/auth-server",
  "version": "1.2.1",
  "private": true,
  "description": "Auth microservice client for RawBase",
  "license": "MIT",
  "main": "server.ts",
  "scripts": {
    "build": "tsc -p .",
    "clean": "yarn rimraf dist",
    "codegen": "yarn graphql-codegen",
    "debug": "nodemon -e ts,js,graphql -x node --inspect -r dotenv/config src/index.js",
    "dev": "yarn concurrently 'yarn nodemon' 'tsc --watch --preserveWatchOutput' -n node,ts -c green.bgBlack,white.bgBlue",
    "lint:eslint": "eslint --fix --ignore-path .gitignore --ext .ts",
    "lint:prettier": "prettier --write --loglevel warn \"**/*.{js,ts,json}\"",
    "nodemon": "nodemon",
    "start": "nodemon -e ts,js,graphql -x node ts-node server.ts"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.3.14",
    "@graphql-tools/load": "^7.5.13",
    "@graphql-tools/schema": "^8.3.13",
    "apollo-server": "^3.8.1",
    "apollo-server-core": "^3.8.1",
    "apollo-server-express": "^3.8.1",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "graphql": "^16.5.0",
    "graphql-import": "^1.0.2",
    "jsonwebtoken": "^8.5.1",
    "pkg-up": "^3.1.0",
    "sequelize": "^6.20.0",
    "sqlite3": "^5.0.8"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.11",
    "@graphql-codegen/typescript-resolvers": "^2.6.4",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "chalk": "^5.0.1",
    "dotenv": "^16.0.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.16",
    "ts-node": "^10.8.0"
  }
}
