{
  "name": "@rawbase/auth-server",
  "version": "1.2.1",
  "private": true,
  "description": "Auth microservice client for RawBase",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "yarn rimraf dist",
    "codegen": "yarn graphql-codegen",
    "debug": "yarn nodemon -e ts,js,graphql -x node --inspect -r dotenv/config src/index.js",
    "dev": "yarn concurrently 'yarn nodemon' 'tsc --watch --preserveWatchOutput' -n node,ts -c green.bgBlack,white.bgBlue",
    "lint:eslint": "eslint --fix --ignore-path .gitignore --ext .ts",
    "lint:prettier": "prettier --write --loglevel warn \"**/*.{js,ts,json}\"",
    "start": "nodemon --config nodemon.json server.ts"
  },
  "dependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.18.0",
    "@graphql-tools/graphql-file-loader": "^7.3.15",
    "@graphql-tools/load": "^7.5.14",
    "@graphql-tools/schema": "^8.3.14",
    "apollo-server": "^3.9.0",
    "apollo-server-core": "^3.9.0",
    "apollo-server-express": "^3.9.0",
    "bcrypt": "^5.0.1",
    "chalk": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "graphql": "^16.5.0",
    "graphql-import": "^1.0.2",
    "jsonwebtoken": "^8.5.1",
    "sequelize": "^6.21.0",
    "sqlite3": "^5.0.8"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.17.12",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.5.1",
    "@graphql-codegen/typescript-resolvers": "^2.6.6",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.0",
    "concurrently": "^7.2.2",
    "dotenv": "^16.0.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.16",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.8.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "packageManager": "yarn@3.2.1",
  "peerDepenedencies": {
    "graphql": "^15.3.0"
  }
}
