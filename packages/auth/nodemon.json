{
  "restartable": "rs",
  "ignore": [".git", "node_modules/", "dist/", "coverage/"],
  "verbose": true,
  "execMap": {
    "ts": "node -r ts-node/register"
  },
  "runOnChangeOnly": false,
  "watch": ["src/**/*", "./server.ts"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts"
}
