{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules", "dist"],
  "verbose": true,
  "execMap": {
    "js": "node"
  },

  "runOnChangeOnly": false,
  "watch": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.graphql",
    "src/**/*.gql",
    "*.ts"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": ".ts, .js, .gql, .graphql, json",
  "exec": "ts-node ./server.ts babel --extensions '.ts'"
}
