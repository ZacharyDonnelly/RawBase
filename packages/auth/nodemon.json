{
  "restartable": "rs",
  "ignore": [".git", "dist"],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  "runOnChangeOnly": false,
  "watch": ["**/*.js", "**/*.graphql", "**/*.gql", "**/*.ts", "*.ts"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": {
    ".graphql": "graphql",
    ".gql": "graphql",
    ".ts": "ts",
    ".js": "js",
    ".json": "json"
  },
  "exec": "ts-node ./server.ts babel --extensions '.ts'"
}
